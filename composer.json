{
    "name": "sac/eloquent-model-generator",
    "description": "An advanced Eloquent model generator for Laravel with comprehensive static analysis and code quality tools",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "illuminate/console": "^10.0",
        "illuminate/database": "^10.0",
        "illuminate/support": "^10.0"
    },
    "require-dev": {
        "orchestra/testbench": "^8.0",
        "pestphp/pest": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0",
        "pestphp/pest-plugin-parallel": "^2.0",
        "pestphp/pest-plugin-type-coverage": "^2.0",
        "phpstan/phpstan": "^1.10",
        "larastan/larastan": "^2.0",
        "friendsofphp/php-cs-fixer": "^3.17",
        "squizlabs/php_codesniffer": "^3.7",
        "slevomat/coding-standard": "^8.13",
        "phpmd/phpmd": "^2.13",
        "infection/infection": "^0.27",
        "vimeo/psalm": "^5.13",
        "phpmetrics/phpmetrics": "^2.8",
        "nunomaduro/collision": "^7.0",
        "doctrine/coding-standard": "^12.0"
    },
    "autoload": {
        "psr-4": {
            "SAC\\EloquentModelGenerator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SAC\\EloquentModelGenerator\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "pest",
        "test:coverage": "pest --coverage",
        "test:types": "pest --type-coverage",
        "test:parallel": "pest --parallel",
        "analyse": [
            "@phpstan",
            "@psalm",
            "@phpmd"
        ],
        "phpstan": "phpstan analyse",
        "psalm": "psalm --show-info=true",
        "phpmd": "phpmd src ansi phpmd.xml",
        "style": [
            "@cs-check",
            "@phpcs"
        ],
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "cs-fix": "php-cs-fixer fix",
        "phpcs": "phpcs",
        "phpcs-fix": "phpcbf",
        "metrics": "phpmetrics --report-html=build/metrics src",
        "infection": "infection --threads=4",
        "check-all": [
            "@test:parallel",
            "@test:types",
            "@analyse",
            "@style",
            "@metrics"
        ],
        "post-autoload-dump": [
            "@php ./vendor/bin/testbench package:discover --ansi"
        ]
    },
    "scripts-descriptions": {
        "test": "Run Pest tests",
        "test:coverage": "Run tests with code coverage",
        "test:types": "Run tests with type coverage analysis",
        "test:parallel": "Run tests in parallel",
        "analyse": "Run all static analysis tools",
        "phpstan": "Run PHPStan static analysis",
        "psalm": "Run Psalm static analysis",
        "phpmd": "Run PHP Mess Detector",
        "style": "Run all code style checks",
        "cs-check": "Check code style with PHP-CS-Fixer",
        "cs-fix": "Fix code style with PHP-CS-Fixer",
        "phpcs": "Check code style with PHP_CodeSniffer",
        "phpcs-fix": "Fix code style with PHP_CodeSniffer",
        "metrics": "Generate code metrics report",
        "infection": "Run mutation testing",
        "check-all": "Run all checks and tests"
    },
    "extra": {
        "laravel": {
            "providers": [
                "SAC\\EloquentModelGenerator\\Providers\\EloquentModelGeneratorServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "infection/extension-installer": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
