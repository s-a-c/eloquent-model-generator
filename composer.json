{
    "name": "sac/eloquent-model-generator",
    "description": "An advanced Eloquent model generator for Laravel with comprehensive static analysis and code quality tools",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "illuminate/console": "^11.0",
        "illuminate/database": "^11.0",
        "illuminate/support": "^11.0",
        "laravel/framework": "^11.42",
        "laravel/installer": "^5.11",
        "nikic/php-parser": "^5.0"
    },
    "require-dev": {
        "orchestra/testbench": "^9.0",
        "pestphp/pest": "^3.0",
        "phpstan/phpstan": "^2.0",
        "larastan/larastan": "^3.0",
        "friendsofphp/php-cs-fixer": "^3.17",
        "squizlabs/php_codesniffer": "^3.7",
        "slevomat/coding-standard": "^8.13",
        "phpmd/phpmd": "^2.13",
        "vimeo/psalm": "^6.0",
        "phpmetrics/phpmetrics": "^3.0",
        "nunomaduro/collision": "^8.0",
        "doctrine/coding-standard": "^12.0",
        "rector/rector": "^2.0",
        "tomasvotruba/type-coverage": "^2.0",
        "tomasvotruba/class-leak": "^2.0",
        "rector/swiss-knife": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "SAC\\EloquentModelGenerator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SAC\\EloquentModelGenerator\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "pest",
        "test:coverage": "pest --coverage --min=80",
        "test:types": "pest --type-coverage --min=90",
        "test:parallel": "pest --parallel",
        "test:edge": "pest --group=edge-cases",
        "analyze": "@php artisan analyze",
        "fix": "@php artisan fix",
        "phpstan": "phpstan analyse --level=max",
        "psalm": "psalm --show-info=true --threads=4",
        "phpmd": "phpmd src ansi phpmd.xml",
        "style": [
            "@cs-check",
            "@phpcs"
        ],
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "cs-fix": "php-cs-fixer fix",
        "phpcs": "phpcs",
        "phpcs-fix": "phpcbf",
        "metrics": "phpmetrics --report-html=build/metrics src",
        "rector-dry": "rector process --dry-run",
        "rector": "rector process",
        "type-coverage": "vendor/bin/type-coverage analyse src --level=3",
        "class-leak": "vendor/bin/class-leak analyse src",
        "check-all": [
            "@test:parallel",
            "@test:types",
            "@test:edge",
            "@analyze",
            "@style",
            "@metrics",
            "@type-coverage"
        ],
        "post-autoload-dump": [
            "@php ./vendor/bin/testbench package:discover --ansi"
        ]
    },
    "scripts-descriptions": {
        "test": "Run Pest tests",
        "test:coverage": "Run tests with code coverage (minimum 80%)",
        "test:types": "Run tests with type coverage analysis (minimum 90%)",
        "test:parallel": "Run tests in parallel",
        "test:edge": "Run edge case tests specifically",
        "analyze": "Run all static analysis tools with interactive prompts",
        "fix": "Run automated fixes for static analysis issues with interactive prompts",
        "phpstan": "Run PHPStan static analysis at maximum level",
        "psalm": "Run Psalm static analysis with multi-threading",
        "phpmd": "Run PHP Mess Detector",
        "style": "Run all code style checks",
        "cs-check": "Check code style with PHP-CS-Fixer",
        "cs-fix": "Fix code style with PHP-CS-Fixer",
        "phpcs": "Check code style with PHP_CodeSniffer",
        "phpcs-fix": "Fix code style with PHP_CodeSniffer",
        "metrics": "Generate code metrics report",
        "rector-dry": "Run Rector in dry-run mode",
        "rector": "Run Rector to apply changes",
        "type-coverage": "Run type coverage analysis with strict level",
        "class-leak": "Run class leak analysis",
        "check-all": "Run all checks and tests including edge cases"
    },
    "extra": {
        "laravel": {
            "providers": [
                "SAC\\EloquentModelGenerator\\Providers\\EloquentModelGeneratorServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "tomasvotruba/type-coverage": true,
            "tomasvotruba/class-leak": true,
            "pestphp/pest-plugin-mutation": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
